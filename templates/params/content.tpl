<div id="paramDetails" class="rosDetails">
  <h3>Param details</h3>
  <p class="name">
    <label>Param</label>
    <span>{{name}}</span>
  </p>
  <p class="type">
    <label>Value</label>
    <span>{{value}}</span>
  </p>
  <p>
    <input type="hidden" id="hdnParamName" name="hdnParamName" value="{{name}}" />
    <input type="text" id="txtSetParam" name="txtSetParam" value="{{value}}" />
    <button id="btnSetParam">Set</button>
  </p>
</div>